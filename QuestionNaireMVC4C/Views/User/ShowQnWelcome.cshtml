@{
    ViewBag.Title = "测评";
    Layout = "~/Views/_Layout_user.cshtml";
}
    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class="panel-heading" style="font-size:26px;font-weight:bold;text-align:center">
                @ViewBag.qn.title
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form id="form1" role="form" >
                            <input type="hidden" id="qn_id" name="id" value="" />
                            <input type="hidden" id="age" name="age" value="" />
                            <div class="form-group">
                                <label>测评介绍</label>
                                <blockquote>
                                    <p>
                                        @Html.Raw(ViewBag.qn.introduction)
                                    </p>
                                </blockquote>
                            </div>
                            <div class="form-group">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <div id="questions">
                                            <div class="panel-success">
                                                <div class="panel panel-heading">
                                                    请选择宝宝现在的年龄
                                                </div>
                                                <div class="panel panel-body">
                                                    <div class="col-lg-10">
                                                        <select id="age_select">
                                                            <option value="5岁以下">0-1岁</option>
                                                            <option value="5岁以下">1-2岁</option>
                                                            <option value="5岁以下">2-3岁</option>
                                                            <option value="5岁以下">3-4岁</option>
                                                            <option value="5岁以下">4-5岁</option>
                                                            <option value="5岁及以上">5-6岁</option>
                                                            <option value="5岁及以上">6-7岁</option>
                                                            <option value="5岁及以上">7-8岁</option>
                                                            <option value="5岁及以上">8-9岁</option>
                                                            <option value="5岁及以上">9-10岁</option>
                                                            <option value="5岁及以上">10-11岁</option>
                                                            <option value="5岁及以上">11-12岁</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a href="javascript:getQn()" class="btn btn-lg  btn-success" style="min-width:150px;margin-left:40%">开始测评</a>
                            <a href="javascript:location.href='/User/CheckQn'" class="btn btn-lg  btn-default" style="min-width:150px;">返回</a>
                        </form>
                    </div>

                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->


<script>





    //保存问卷
    function getQn() {

        var age = $("#age_select").val();
        $("#age").val(age);
        location.href = "@Url.Action("ShowQn","User")" + "?age=" + age + "&code=" + $("#qn_id").val();
    }



    $(function () {
        @{
            if (!object.Equals(ViewBag.qn, null))
            {
                @Html.Raw("$('#qn_id').val('" + ViewBag.qn.code + "');");
                @Html.Raw("$('#qn_title').val('" + ViewBag.qn.title + "');");
                @Html.Raw("$('#qn_introduction').html('" + ViewBag.qn.introduction + "');");
            }
        }
    });
</script>